{
    "name": "wxt-user-settings",
    "version": "0.1.0",
    "description": "A custom WXT module for user settings.",
    "license": "MIT",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.mts",
            "import": "./dist/index.mjs"
        },
        "./plugin": {
            "types": "./dist/plugin.d.mts",
            "default": "./dist/plugin.mjs"
        }
    },
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.mts",
    "files": [
        "dist"
    ],
    "sideEffects": false,
    "scripts": {
        "generate:templates": "node scripts/generate-template-strings.mjs",
        "prebuild": "pnpm run generate:templates",
        "pretest": "pnpm run generate:templates",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "pnpm run build",
        "test": "vitest run",
        "test:watch": "vitest",
        "dev": "wxt",
        "dev:build": "wxt build",
        "check": "check",
        "build": "tsdown",
        "prepack": "tsdown",
        "prepare": "wxt prepare"
    },
    "peerDependencies": {
        "wxt": ">=0.20.0"
    },
    "devDependencies": {
        "@types/node": "^22.10.0",
        "eslint": "^9.17.0",
        "tsdown": "0.20.0-beta.3",
        "tsup": "^8.3.5",
        "typescript": "^5.7.2",
        "vite": "^5.4.21",
        "vitest": "^2.1.9",
        "wxt": "^0.20.13"
    },
    "engines": {
        "node": ">=18"
    },
    "keywords": [
        "wxt",
        "wxt-module",
        "browser-extension",
        "settings"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/your-org/wxt-user-settings"
    }
}